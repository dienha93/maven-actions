{
  "name": "maven-build-action",
  "version": "1.0.0",
  "description": "A comprehensive GitHub Action for Maven build, test, and deploy operations",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "package": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dienha93/maven-actions.git"
  },
  "keywords": [
    "github-action",
    "maven",
    "java",
    "build",
    "test",
    "deploy",
    "ci-cd"
  ],
  "author": "Dien Ha",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^5.0.1",
    "@actions/cache": "^3.2.4",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.1",
    "fast-xml-parser": "^4.3.2",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "fast-check": "^4.5.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  }
}
